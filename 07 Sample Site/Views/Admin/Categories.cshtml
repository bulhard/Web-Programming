@model List<CategoryViewModel>

@{
    Layout = "_AdminLayout";
}

<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="pe-7s-network icon-gradient bg-mean-fruit">
                </i>
            </div>
            <div>
                Categories
                <div class="page-title-subheading">
                    List of all categories in my blog
                </div>
            </div>
        </div>
        <div class="page-title-actions">
            <a href="/Admin/EditCategory/0" data-toggle="tooltip" title="" data-placement="bottom" class="btn btn-success" data-original-title="Add new category">
                Add new category
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="main-card mb-3 card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="mb-0 table table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td>@category.Id</td>
                                    <td>@category.Title</td>
                                    <td><a class="mb-2 mr-2 btn btn-primary" href="/Admin/EditCategory/@category.Id">Edit</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>